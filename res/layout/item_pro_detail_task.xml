<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="@dimen/project_item_height"
        android:background="@color/gray_forth"
        android:orientation="horizontal">
        <TextView 
            android:layout_width="100dp"
            android:layout_height="match_parent"
            style="@style/pro_detail_label"
            android:text="项目任务"/>
        <LinearLayout 
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">
            <ProgressBar 
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:max="100" 
    			android:progress="50"/>
            <TextView 
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                style="@style/pro_detail_title"
                android:text="2/2"/>
        </LinearLayout>
        
        <ImageView 
            android:id="@+id/iv_add"
            android:src="@drawable/iv_add"
            android:layout_width="@dimen/project_item_height"
            android:layout_height="@dimen/project_item_height"/>
        <ImageView 
            android:id="@+id/iv_fold"
            android:src="@drawable/unfold"
            android:layout_width="@dimen/project_item_height"
            android:layout_height="@dimen/project_item_height"/>
    </LinearLayout>
</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_margin="5dp"
	    android:orientation="vertical">

		<LinearLayout
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:layout_margin="2dp"
		    android:orientation="horizontal" >

		    <TextView
		        style="@style/pro_detail_label"
		        android:layout_width="100dp"
		        android:layout_height="wrap_content"
		        android:text="详细内容" />

		    <TextView
		        android:id="@+id/tv_ds"
		        style="@style/pro_detail_title"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:text="把顶部俺的家看书就贷款哪款少年的卡萨诺大口径安少康阿四大四大谁打死打死" />
		</LinearLayout>
		<LinearLayout
		    android:id="@+id/ll_attach"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:layout_margin="2dp"
		    android:orientation="horizontal" >
			<View
			     style="@style/pro_detail_label"
			        android:layout_width="100dp"
			        android:layout_height="match_parent"/>
			<ImageView 
			    android:id="@+id/iv_file"
			    android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:src="@drawable/attach"/>
		</LinearLayout>
	    <LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	         android:layout_margin="2dp"
	        android:orientation="horizontal">

	        <TextView
	            style="@style/pro_detail_label"
	            android:layout_width="100dp"
	            android:layout_height="wrap_content"
	            android:text="流程性质" />

	        <TextView 
	            android:id="@+id/tv_starttime"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            style="@style/pro_detail_title"
	            android:text="自由流程"/>
	    </LinearLayout>
	    <LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	         android:layout_margin="2dp"
	        android:orientation="horizontal">

	        <TextView
	            style="@style/pro_detail_label"
	            android:layout_width="100dp"
	            android:layout_height="wrap_content"
	            android:text="流程类别" />

	        <TextView 
	            android:id="@+id/tv_type"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            style="@style/pro_detail_title"
	            android:text="申请用车"/>
	    </LinearLayout>
	    <LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	         android:layout_margin="2dp"
	        android:orientation="horizontal">

	        <TextView
	            style="@style/pro_detail_label"
	            android:layout_width="100dp"
	            android:layout_height="wrap_content"
	            android:text="流程等级" />

	        <TextView 
	             android:id="@+id/tv_level"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            style="@style/pro_detail_title"
	            android:text="普通"/>
	    </LinearLayout>
	    <LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_margin="2dp"
	        android:orientation="horizontal">

	        <TextView
	            style="@style/pro_detail_label"
	            android:layout_width="100dp"
	            android:layout_height="wrap_content"
	            android:text="发起日期" />

	        <TextView 
	            android:id="@+id/tv_time"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            style="@style/pro_detail_title"
	            android:text="2013-07-10"/>
	    </LinearLayout>
	</LinearLayout>
</LinearLayout>
